{
  "id": "ui-automation",
  "name": "ui-automation",
  "version": "1.0.0",
  "author": "gameswu",
  "type": "automation",
  "url": "ws://localhost:8766",
  "autoStart": false,
  "permissions": [
    {
      "id": "ui.click",
      "dangerLevel": "medium",
      "i18n": {
        "zh-CN": {
          "name": "鼠标点击",
          "description": "允许插件控制鼠标点击操作"
        },
        "en-US": {
          "name": "Mouse Click",
          "description": "Allow plugin to control mouse click operations"
        }
      }
    },
    {
      "id": "ui.type",
      "dangerLevel": "high",
      "i18n": {
        "zh-CN": {
          "name": "键盘输入",
          "description": "允许插件模拟键盘输入，可能捕获敏感信息"
        },
        "en-US": {
          "name": "Keyboard Input",
          "description": "Allow plugin to simulate keyboard input, may capture sensitive information"
        }
      }
    },
    {
      "id": "ui.screenshot",
      "dangerLevel": "medium",
      "i18n": {
        "zh-CN": {
          "name": "屏幕截图",
          "description": "允许插件捕获屏幕截图"
        },
        "en-US": {
          "name": "Screenshot",
          "description": "Allow plugin to capture screenshots"
        }
      }
    },
    {
      "id": "ui.window",
      "dangerLevel": "low",
      "i18n": {
        "zh-CN": {
          "name": "窗口信息",
          "description": "允许插件获取窗口列表和信息"
        },
        "en-US": {
          "name": "Window Information",
          "description": "Allow plugin to get window list and information"
        }
      }
    }
  ],
  "capabilities": [
    "click",
    "type",
    "screenshot",
    "getWindowList",
    "activateWindow"
  ],
  "i18n": {
    "zh-CN": {
      "displayName": "UI自动化",
      "description": "控制鼠标键盘、截图、窗口管理等桌面自动化操作",
      "category": "自动化工具"
    },
    "en-US": {
      "displayName": "UI Automation",
      "description": "Control mouse, keyboard, screenshots, and window management for desktop automation",
      "category": "Automation Tools"
    }
  },
  "icon": "mouse-pointer-2",
  "iconFile": null,
  "command": {
    "win32": [".venv\\Scripts\\python.exe", "main.py"],
    "darwin": [".venv/bin/python3", "main.py"],
    "linux": [".venv/bin/python3", "main.py"]
  },
  "workingDirectory": "plugins/ui-automation-plugin"
}
